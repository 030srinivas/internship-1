<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Tickets</title>
    <!-- Include Bootstrap or any other CSS frameworks if needed -->
</head>
<body>
    <h1>List of Tickets</h1>
    <table border="1">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Issue</th>
                <th>Approved</th>
                <th>Disapproved</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket => { %>
              <tr>
                <td><%= ticket.userId %></td>
                <td><%= ticket.issue %></td>
                <td>
                  <% if (ticket.isApproved) { %>
                    <span class="approved">Approved</span>
                  <% } else { %>
                    <a href="/approve-ticket/<%= ticket._id %>" class="approve-button">Approve</a>
                  <% } %>
                </td>
                <td>
                  <a href="/disapprove-ticket/<%= ticket._id %>" class="disapprove-button">Disapprove</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
    </table>
</body>
</html>
